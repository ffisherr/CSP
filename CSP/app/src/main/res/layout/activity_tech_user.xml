<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_vertical"
        android:orientation="horizontal">
    </LinearLayout>

    <ScrollView
        android:id="@+id/document"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Номер заявки:" />

                <TextView
                    android:id="@+id/numbeDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                    android:id="@+id/DateDocument"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дата подачи заявки:" />

                <TextView
                    android:id="@+id/dateDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Пользователь:" />

                <Button
                    android:id="@+id/creatorIdTextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView010"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Оборудование:" />

                <Button
                    android:id="@+id/equipmentIdTextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Статус" />

                <TextView
                    android:id="@+id/nameStatusDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Номер телефона:" />

                <TextView
                    android:id="@+id/PhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info" />

            <Button
                android:id="@+id/Ok_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickRegister"
                android:text="Принять заявку" />

            <Button
                android:id="@+id/No_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickRegister"
                android:text="Отклонить заявку" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>